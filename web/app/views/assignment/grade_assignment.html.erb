<%= javascript_include_tag "grade", "data-turbolinks-track" => true %>
<style>
body {
  max-width: 50%;
  margin-left: 2em;
}
</style>
<%= raw(@html) %>
<script>
$(function() {
  var repl = $("<div>").addClass("repl");;
  repl.css({
    position: "fixed",
    right: "2em",
    bottom: "2em",
    width: "40%",
    height: "90%",
    "border": "1px solid #333",
    "background-color": "white"
  });
  window.REPL = repl;
  window.RUN_CODE = makeRepl(repl);
  $(document.body).append(repl);
  ct_transform($(document.body));
});
</script>
